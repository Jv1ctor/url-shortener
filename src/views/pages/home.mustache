{{>partials/head}}

<header class="bg-black">
  <nav class="container mx-auto flex justify-between p-5 ">
    <a href="/"><img src="/img/Linkly.svg" alt="logo"></a>

    <div class="flex gap-4">

      <a href="/login">
        <div class="flex place-items-center gap-2 bg-grey text-white border-2 border-[#353C4A] px-5 py-2 rounded-full cursor-pointer hover:bg-primaryBlue hover:border-transparent hover:shadow-activeShadow transition-all duration-300 ease-in-out">
          Login
          <span>
            <img src="img/icons/signIn.png" alt="login icon">
          </span>
        </div>
      </a>

      <a href="/register">
        <div class="hidden md:block text-white bg-primaryBlue shadow-activeShadow px-5 py-2 rounded-full cursor-pointer border-2 border-primaryBlue hover:bg-grey transition-colors duration-300 ease-in-out">
          Register Now
        </div>
      </a>
    </div>
  </nav>
</header>

<main class="bg-black bg-cubes bg-contain h-full pb-64 lg:bg-swirl lg:bg-no-repeat  ">
  <div class="pt-14 flex flex-col place-items-center pb-14 relative lg:pb-20">
    <h1 class="bg-gradient animate-background bg-300 bg-clip-text text-transparent font-extrabold text-4xl text-center pb-8 sm:text-5xl ">
      Shorten Your Loooong Links :)
    </h1>
    <p class="font-light text-lite text-center max-w-[50ch] pb-10 text-sm sm:text-lg">
      Linkly is an efficient and easy-to-use URL shortening service that streamlines your online experience.
    </p>

    <form class="relative flex items-center w-4/5" action="/" method="post" data-js="createShortUrl">
      <label for="url" class="absolute left-0 ml-3 sm:ml-5">
        <img class="lg:w-[24px] lg:h-[24px]" src="/img/icons/link.png" width="20" height="20" alt="link icon">
      </label>

      <input class="placeholder:text-lite text-xs text-lite bg-black border-4 border-[#353C4A] rounded-full px-10 pr-12 py-3 focus:outline-none focus:border-primaryBlue focus:shadow-activeShadow transition-all duration-200 ease-in-out w-full lg:px-16 lg:py-5 lg:text-lg" type="text" name="url" id="url" placeholder="Enter the link here">

      <button class="absolute right-0 bg-primaryBlue shadow-activeShadow rounded-full p-3 mr-2 cursor-pointer border-2 border-primaryBlue hover:bg-grey transition-all duration-200 ease-in-out lg:p-5 lg:px-9 lg:py-4">

        <img class="lg:w-[14px] lg:h-[14px] lg:hidden" src="/img/icons/rightArrow.png" width="10" height="10" alt="seta para direita icon">

        <span class="hidden lg:block text-white">Shorten Now!</span>
      </button>
    </form>

    {{#error}}
    <span class="absolute bottom-0 text-white text-xs bg-red rounded-lg p-3 animate-message lg:p-5 lg:text-sm err-submit">{{ message }}</span>
    {{/error}}
  </div>

  <div class="px-2 md:px-5 ">
    <table class="w-full" data-js="table">
      <tr>
        <th class="bg-grey p-5 mb-1 max-md:rounded-t-lg  md:rounded-tl-lg">
          <h3 class="text-lite text-sm  text-start font-bold">Shorten Links</h3>
        </th>
        
        <th class="max-md:hidden bg-grey lg:p-5 mb-1">
          <h3 class="text-lite text-sm  text-start font-bold">Original Links</h3>
        </th>

        <th class="max-md:hidden bg-grey p-5 mb-1">
          <h3 class="text-lite text-sm  text-center font-bold">Clicks</h3>
        </th>

        <th class="max-md:hidden bg-grey p-5 mb-1">
          <h3 class="text-lite text-sm  text-center font-bold">Status</h3>
        </th>
        
        <th class="max-md:hidden bg-grey p-5 mb-1">
          <h3 class="text-lite text-sm  text-center font-bold">Date</h3>
        </th>

        <th class="bg-grey rounded-tr-lg p-5 mb-1"></th>
      </tr>
      
      {{#url}}
        {{>partials/rowUrl}}
      {{/url}}
      {{^url}}
      <tr class="relative">
        <td class="text-base text-white text-center lg:text-xl absolute left-1/2 -translate-x-1/2 top-10">
          Enter a url to shorten
        </td>
      </tr>
      {{/url}}
      
    </table>
  </div>
</main>

{{>partials/footer}}