{{>partials/head}}

<header class="bg-black">
  <nav class="container mx-auto flex justify-between p-5 ">
    <a href="/"><img src="/img/Linkly.svg" alt="logo"></a>

    <div class="flex place-items-center gap-2 bg-grey text-white text-sm border-2 border-[#353C4A] px-3 py-2 rounded-full cursor-pointer hover:bg-primaryBlue hover:border-transparent hover:shadow-activeShadow transition-all duration-300 ease-in-out md:px-5 md:text-base">
      <a href="/login">Login</a>
      <span>
        <img src="img/icons/signIn.png" alt="login icon">
      </span>
    </div>
  </nav>
</header>

<main class="bg-black bg-cubes bg-contain h-full pb-36 pt-24 lg:py-32">
  <form action="" method="post" data-js="form">
    <div class="flex flex-col items-center">
      <h1 class="text-lite pb-10 text-4xl lg:text-5xl">Register</h1>

      <div class="flex flex-col gap-2 text-lite pb-8 lg:w-1/3">
        <label class="pl-3 text-base lg:text-lg" for="email">Email: </label>
        <input class="placeholder:text-lite text-xs text-lite bg-black border-2 border-[#353C4A] rounded-xl px-5 py-2 focus:outline-none focus:border-primaryBlue focus:shadow-activeShadow transition-all duration-200 ease-in-out w-full lg:text-lg lg:py-3" type="email" name="email" id="email" placeholder="Enter your email" data-js="input">
      </div>

      
      <div class="flex flex-col gap-2 text-lite pb-8 lg:w-1/3">
        <label class="pl-3 text-base lg:text-lg" for="name">Name: </label>
        <input class="placeholder:text-lite text-xs text-lite bg-black border-2 border-[#353C4A] rounded-xl px-5 py-2 focus:outline-none focus:border-primaryBlue focus:shadow-activeShadow transition-all duration-200 ease-in-out w-full lg:text-lg lg:py-3" type="text" name="name" id="name" placeholder="Enter your name" data-js="input">
      </div>

      <div class="flex flex-col gap-2 text-lite pb-8 lg:w-1/3">
        <label class="pl-3 text-base lg:text-lg" for="password">Password: </label>
        <input class="placeholder:text-lite text-xs text-lite bg-black border-2 border-[#353C4A] rounded-xl px-5 py-2 focus:outline-none focus:border-primaryBlue focus:shadow-activeShadow transition-all duration-200 ease-in-out w-full lg:text-lg lg:py-3" type="password" name="password" id="password" placeholder="Enter your password" data-js="input">
      </div>

      <div class="flex flex-col gap-2 text-lite pb-8 lg:w-1/3">
        <label class="pl-3 text-base lg:text-lg" for="confirmPassword">Confirm password: </label>
        <input class="placeholder:text-lite text-xs text-lite bg-black border-2 border-[#353C4A] rounded-xl px-5 py-2 focus:outline-none focus:border-primaryBlue focus:shadow-activeShadow transition-all duration-200 ease-in-out w-full lg:text-lg lg:py-3" type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm you password" data-js="input">
      </div>

      <button class="text-white text-sm bg-primaryBlue px-5 py-2 rounded-full border-2 border-primaryBlue cursor-pointer shadow-activeShadow hover:bg-grey transition-colors duration-300 ease-in-out lg:text-lg">Sign Up</button>
    </div>

  </form>

</main>

{{>partials/footer}}